<%= form_with(model: @booking, local: true) do |form| %>

  <div class="field">
    <%= form.label :cost %>
    <%= form.number_field :cost, id: :booking_cost %>
  </div>

  <div class="field">
    <%= form.label :inDate %>
    <%= form.date_select :inDate, id: :booking_inDate %>
  </div>

  <div class="field">
    <%= form.label :outDate %>
    <%= form.date_select :outDate, id: :booking_outDate %>
  </div>

  <div class="field">
    <%= form.label :numOfGuests %>
    <%= form.number_field :numOfGuests, id: :booking_numOfGuests %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
